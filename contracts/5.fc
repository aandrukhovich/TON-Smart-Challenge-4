(int, int) fast_fib(int n) {
  if (n == 0) {
    return (0, 1);
  }
  (int a, int b) = fast_fib(n / 2);
  int c = a * (b * 2 - a);
  int d = a * a + b * b;
  if (n & 1) {
    return (d, c + d);
  }
  return (c, d);
} 

